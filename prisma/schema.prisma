// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Model drużyny
model Team {
  id          String    @id @default(cuid())
  name        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  players     Player[]  // Relacja jeden-do-wielu z zawodnikami
}

// Model zawodnika
model Player {
  id          String    @id @default(cuid())
  name        String
  number      String?   // Opcjonalny numer (? oznacza opcjonalność)
  position    String?   // Pozycja jest opcjonalna
  imageUrl    String?   // URL do zdjęcia (opcjonalny)
  birthYear   String?   // Rok urodzenia (opcjonalny)
  teamId      String    // Klucz obcy do drużyny
  team        Team      @relation(fields: [teamId], references: [id]) // Relacja do drużyny
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
